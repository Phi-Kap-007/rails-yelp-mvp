<h1> <%= @restaurant.name %> </h1>
<br> <%= @restaurant.address %>
<br>
<br> <%= @restaurant.phone_number %>
<br>
<br> <%= @restaurant.category %>

<br>
<br>
<% @reviews.each do |review| %>
  <%= review.content %>
  <br>
  <%= review.rating %>
  <br>
  <br>
<% end %>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
